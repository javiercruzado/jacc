<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.jacc.expensemanager.client.javafx.controller.CategoryController">
   <children>
      <VBox prefHeight="162.0" prefWidth="340.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="51.0" prefWidth="340.0">
               <children>
                  <Button fx:id="bNewButton" defaultButton="true" mnemonicParsing="false" onAction="#handleButtonNew" prefWidth="100.0" text="New">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="bSaveEditButton" mnemonicParsing="false" onAction="#handleSaveEdit" prefWidth="100.0" text="Save">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="bCancelButton" cancelButton="true" mnemonicParsing="false" onAction="#handleCancelButton" prefWidth="100.0" text="Cancel">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <ListView fx:id="lvCategories" prefHeight="180.0" prefWidth="200.0" />
            <Separator prefWidth="200.0" />
            <Label text="Name">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <TextField fx:id="tfCategoryName" prefHeight="25.0" prefWidth="240.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Label text="Color">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="cbColors" prefHeight="25.0" prefWidth="336.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ComboBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
